{
  "name": "@valantic/frontend-utils",
  "version": "0.0.0",
  "description": "A set of reusable frontend utils",
  "type": "module",
  "lastDependencyUpdate": "15.12.2025",
  "scripts": {
    "release": "npm version patch -m 'Release %s' && git push --follow-tags",
    "release:minor": "npm version minor -m 'Release %s' && git push --follow-tags",
    "release:major": "npm version major -m 'Release %s' && git push --follow-tags",
    "clean:caches": "rm -rf .stylelintcache node_modules/.cache",
    "fix:stylelint": "npm run lint:stylelint -- --cache=false --config .stylelintrc.fix.js --fix",
    "lint": "npm run lint:eslint",
    "lint:eslint": "eslint ./",
    "test": "npm run lint && npm run test:unit -- --watch=false",
    "test:unit": "vitest --dir tests",
    "prettier": "prettier . --write"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:valantic/frontend-utils.git"
  },
  "engines": {
    "node": ">=22 <25",
    "npm": ">=10 <12"
  },
  "keywords": [
    "scss",
    "valantic"
  ],
  "author": "valantic CEC",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/valantic/frontend-utils/issues"
  },
  "homepage": "https://github.com/valantic/frontend-utils",
  "devDependencies": {
    "@eslint/eslintrc": "~3.3.1",
    "@eslint/js": "~9.36.0",
    "@trivago/prettier-plugin-sort-imports": "~5.2.2",
    "@types/node": "~24.6.2",
    "eslint": "~9.36.0",
    "eslint-config-prettier": "~10.1.5",
    "eslint-config-valantic": "~18.0.0",
    "eslint-import-resolver-typescript": "~4.4.4",
    "eslint-plugin-import": "~2.32.0",
    "eslint-plugin-jsdoc": "~60.7.1",
    "eslint-plugin-unicorn": "~61.0.2",
    "eslint-plugin-vue": "~10.5.0",
    "jsdom": "~27.0.0",
    "prettier": "~3.6.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "~8.45.0",
    "vitest": "~3.2.4"
  }
}
